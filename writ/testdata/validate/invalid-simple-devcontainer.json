{
  // The devcontainer.json spec uses JSONC, so this comment is perfectly valid
  "name": "simple-ish devcontainer.json",
  "context": "..",
  "dockerFile": "./Containerfile",
  "containerEnv": {
    "APP_PATH": "${containerWorkspaceFolder}",
    "SHELL": "/bin/bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "OpenTofu.vscode-opentofu",
        "charliermarsh.ruff",
        "dorzey.vscode-sqlfluff",
        "inferrinizzard.prettier-sql-vscode",
        "mintlify.document",
        "minodisk.bigquery-runner",
        "ms-python.python",
        "shinichi-takii.sql-bigquery",
        "tamasfe.even-better-toml"
      ]
    },
  },
  "forwardPorts": [],
  // According to the specs, the following is invalid; however, as it
  // currently stands, this passes validation. This incantation is
  // actually in use in one of the repositories my team works in.
  //
  // Visual Studio Code doesn't complain about it, and I *think* it
  // works (although, it probably doesn't, and VSCode is just
  // performing some automatic things we're not aware of).
  //
  // I'm keeping this in as a failing test so it can be used as a flag
  // if/when the spec is changed to either support this (unlikely) or
  // catch it as a violation.
  //
  // See the file valid-simple-devcontainer.json; it's basically this
  // file, but actually following the spec.
  "mounts": [
      "source=${env:XDG_CONFIG_HOME}${env:APPLOCALDATA}/gcloud,target=/root/.config/gcloud,type=bind,consistency=cached"
  ]
}
